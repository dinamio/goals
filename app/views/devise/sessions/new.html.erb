<hr/>
<div class="container">
<%= devise_error_messages! %>
<div class="col-sm-4"></div>
<div class="col-sm-8">
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-group row">
    <%= f.label :login, "Логин", class: "col-sm-2 col-form-label" %>
    <div class="col-sm-10">
      <%= f.text_field :login, autofocus: true %>
    </div>  
  </div>

  <div class="form-group row">
    <%= f.label :password, "Пароль", class: "col-sm-2 col-form-label" %>
    <div class="col-sm-10">
      <%= f.password_field :password, autocomplete: "off" %>
    </div>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="form-check row">
    <div class="col-sm-0"></div>
    <%= f.label :remember_me, "Запомнить",class: "form-check-label"  %>
    <%= f.check_box :remember_me, class: "form-check-input" %>  
    </div>
  <% end -%>
  <div class="row">
  <div class="col-sm-2"></div>
    <div class="col-sm-6">
      <%= f.submit "Войти", class: "btn btn-primary" %>
      <%= link_to "Зарегистрироваться", new_registration_path(resource_name),class: "btn btn-primary"%>
    </div>
  </div>

<% end %>


</div>

</div>